<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/main_btn_customers"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="客户"
            android:layout_height="wrap_content"/>

    <Button
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/main_btn_customers"
            android:id="@+id/main_btn_task"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/main_btn_customers"
            app:layout_constraintRight_toRightOf="@+id/main_btn_customers"
            android:text="任务"
            android:layout_height="wrap_content"/>


    <Button
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/main_btn_task"
            android:id="@+id/main_btn_setting"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/main_btn_task"
            app:layout_constraintRight_toRightOf="@+id/main_btn_task"
            android:text="设置"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>